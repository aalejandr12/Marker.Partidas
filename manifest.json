{
  "manifest_version": 3,
  "name": "Marcador de Partidas Arancelarias",
  "version": "1.8",
  "description": "Resalta c√≥digos arancelarios y muestra su significado.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo.png",
      "48": "logo/logo.png",
      "128": "logo/logo.png"
    }
  },
  "icons": {
    "16": "logo/logo.png",
    "48": "logo/logo.png",
    "128": "logo/logo.png"
  }
}
